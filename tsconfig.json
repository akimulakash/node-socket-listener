{
    "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "target": "es2021",
      "moduleResolution": "node",
      "declaration": false,
      "sourceMap": true,
      "outDir": "./dist",
      "baseUrl": "./src",
      "resolveJsonModule": true,
      "skipLibCheck": true
    },
    "lib": ["es2021"],
    "include": ["./src/**/*.ts"],
    "exclude": ["**/*.test.ts", "node_modules"]
  }